<Page
    x:Class="GestioInformesHorari.View.GestorHorari"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GestioInformesHorari.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Loaded="GestorHoraris_Loaded"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <DataTemplate x:Key="comboBoxTemplate">
            <Grid>
                <ComboBox x:Name="comboBoxEspecialitats" Width="200" ItemsSource="{Binding Especialitat}"/>
            </Grid>
        </DataTemplate>
      
    </Page.Resources>
    <Grid>
        <controls:DataGrid x:Name="gestorHorariDataGrid" SelectionChanged="gestorHorariDataGrid_SelectionChanged"
                                    AutoGenerateColumns="False" VerticalScrollBarVisibility="Visible" Grid.Column="0" Grid.Row="0"/>
    </Grid>
</Page>
